# Application settings
DEBUG=False  # Set to True for development debugging
TESTING=False  # Set to True for test environment
SECRET_KEY=your-secret-key-here

# Security settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
RATELIMIT_STORAGE_URL=memory://

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Rate limiting configuration (optional, defaults will be used if not set)
RATELIMIT_DEFAULT=200/day;50/hour
RATELIMIT_LOGIN=5/minute

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # options: json, text
LOG_FILE_PATH=logs/auth.log
ERROR_LOG_FILE_PATH=logs/error.log

# Security configuration
API_KEY=your-api-key-here 